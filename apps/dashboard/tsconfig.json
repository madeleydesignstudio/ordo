{
    "extends": "@workspace/typescript-config/react-library.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "moduleResolution": "Bundler",
      "module": "ESNext",
      "target": "ES2022",
      "skipLibCheck": true,
      "strictNullChecks": true,
      "baseUrl": ".",
      "paths": {
        "@workspace/ui/*": ["./src/*"],
        "@/*": ["./app/*"]
      }
    },
    "include": ["."],
    "exclude": ["node_modules", "dist"]
  }