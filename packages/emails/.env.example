# Resend Configuration
RESEND_API_KEY=re_xxxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxxx

# Application URLs (used in email templates)
APP_BASE_URL=https://ordo.app
DASHBOARD_URL=https://ordo.app/dashboard
SUPPORT_URL=https://ordo.app/support

# Email Configuration
DEFAULT_FROM_EMAIL=Ordo <noreply@ordo.app>
SUPPORT_EMAIL=support@ordo.app
NO_REPLY_EMAIL=noreply@ordo.app

# React Email Development Server
REACT_EMAIL_PORT=3001
REACT_EMAIL_HOST=localhost

# Optional: Email Tracking (if implementing analytics)
EMAIL_TRACKING_ENABLED=false
EMAIL_TRACKING_BASE_URL=https://ordo.app/track

# Optional: Unsubscribe Configuration
UNSUBSCRIBE_BASE_URL=https://ordo.app/unsubscribe

# Development/Testing
NODE_ENV=development
EMAIL_PREVIEW_MODE=true
